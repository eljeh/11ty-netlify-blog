<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta http-equiv="content-type" content="text/html; charset=UTF-8">
		<meta http-equiv="content-language" content="en-CA">
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name="robots" content="index,follow">

		<!-- Site Content -->
		<title>{%- if title %}{{title}} | {% endif %}{{site.name}}{%- if site.tagline %} - {{site.tagline}}{%- endif %}</title>
		<meta name="theme-color" content="{{site.themeColor}}">
		<meta name="apple-mobile-web-app-status-bar-style" content="{{site.themeColor}}">
		<meta name="description" content="{{site.description}}">
		<link name="keywords" content=""> 
				
		<!-- Icons -->
		<link rel="shortcut icon" href="{{site.favicon | url}}" type="image/x-icon">
		<link rel="apple-touch-icon" href="{{site.icon16 | url}}" sizes="16x16" type="image/png">
		<link rel="icon" href="{{site.icon192 | url}}" sizes="192x192" type="image/png">

		<!-- Google / Search Engine -->
		<meta itemprop="name" content="{%- if title %}{{title}} | {% endif %}{{site.name}}{%- if site.tagline %} - {{site.tagline}}{%- endif %}">
		<meta itemprop="description" content="{{site.description}}">
		<meta itemprop="image" content="{{site.thumbnail | url}}">
		<meta name="publisher" content="{{site.publisher}}">
		<meta name="google" content="notranslate">

		<!-- Open Graph / Facebook -->
		<meta property="og:url" content="{{site.url}}">
		<meta property="og:title" content="{%- if title %}{{title}} | {%- endif %}{{site.name}}{%- if site.tagline %} - {{site.tagline}}{%- endif %}">
		<meta property="og:description" content="{{site.description}}">
		<meta property="og:image" content="{{site.thumbnail | url}}">
		<meta property="og:type" content="website">
		<meta property="og:locale" content="en_CA">
		<meta property="og:locale:alternate" content="en_FR">

		<!-- Twitter -->
		<meta name="twitter:url" content="{{site.url | url}}">
		<meta name="twitter:title" content="{%- if title %}{{title}} | {%- endif %}{{site.name}}{%- if site.tagline %} - {{site.tagline}}{%- endif %}">
		<meta name="twitter:description" content="{{site.description}}">
		<meta name="twitter:image:src" content="{{site.thumbnail | url}}">